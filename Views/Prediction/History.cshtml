@using Lazar_Horatiu_Lab4_Master.Models
@model IEnumerable<PredictionHistory>

<h2>Istoric predicții</h2>

<form method="get" asp-action="History" class="row g-3 mb-3">
    <div class="col-md-3">
        <label class="form-label">Tip plată</label>
        <select name="paymentType" class="form-select">
            <option value="">Toate</option>
            <option value="CARD" selected="@(ViewBag.CurrentPaymentType == "CRD")">Card</option>
            <option value="CASH" selected="@(ViewBag.CurrentPaymentType == "CSH")">Cash</option>
            <option value="OTHER" selected="@(ViewBag.CurrentPaymentType == "OTHER")">Altele</option>
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Preț minim</label>
        <input type="number" step="0.01" name="minPrice"
               value="@(ViewBag.CurrentMinPrice ?? "")"
               class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Preț maxim</label>
        <input type="number" step="0.01" name="maxPrice"
               value="@(ViewBag.CurrentMaxPrice ?? "")"
               class="form-control" />
    </div>
    <div>
        <label class="form-label">Data initiala</label>
        <input type="datetime" name="dataInitiala"
               value="@(ViewBag.CurrentDataInitiala ?? "")"
               class="form-control" />
    </div>
    <div>
        <label class="form-label">Data finala</label>
        <input type="datetime" name="dataFinala"
               value="@(ViewBag.CurrentDataFinala ?? "")"
               class="form-control" />
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary">Filtrează</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data</th>
            <th>Pasageri</th>
            <th>Distanță</th>
            <th>Timp (sec)</th>
            <th>Tip plată</th>
            <th>Preț prezis
                <a asp-action="History"
                   asp-route-paymentType="@ViewBag.CurrentPaymentType"
                   asp-route-minPrice="@ViewBag.CurrentMinPrice"
                   asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                   asp-route-sortOrder="price_asc">↑</a>
                <a asp-action="History"
                   asp-route-paymentType="@ViewBag.CurrentPaymentType"
                   asp-route-minPrice="@ViewBag.CurrentMinPrice"
                   asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                   asp-route-sortOrder="price_desc">↓</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CreatedAt</td>
                <td>@item.PassengerCount</td>
                <td>@item.TripDistance</td>
                <td>@item.TripTimeInSecs</td>
                <td>@item.PaymentType</td>
                <td>@item.PredictedPrice</td>
            </tr>
        }
    </tbody>
</table>